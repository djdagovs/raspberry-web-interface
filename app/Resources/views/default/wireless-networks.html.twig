{% extends 'base.html.twig' %}

{% block title %}Wireless networks{% endblock %}

{% block content %}
    <section>
        <div class="section-inner">
            <h2>Saved networks</h2>

            {% if saved_networks %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th></th>
                                <th>#</th>
                                <th>Name</th>
                                <th>Preferred BSSID</th>
                                <th>Status</th>
                                <th></th>
                                <th></th>
                            </tr>
                            {% for network in saved_networks %}
                                <tr{{ network.current ? ' class="current"' : '' }}>
                                    <td class="text-center"><i class="fa {{ network.current ? 'fa-circle' : 'fa-circle-o' }}" aria-hidden="true"></i></td>
                                    <td>{{ network.id }}</td>
                                    <td>{{ network.ssid }}</td>
                                    <td>{{ network.bssid }}</td>
                                    <td>{{ network.status }}</td>
                                    <td>
                                        {% if network.status == 'Disabled' %}
                                            <form action="{{ url('wireless_networks_enable') }}" method="post">
                                                <input type="hidden" name="id" value="{{ network.id }}">
                                                <button type="submit" class="btn btn-success btn-xs">Enable</button>
                                            </form>
                                        {% else %}
                                            <form action="{{ url('wireless_networks_disable') }}" method="post">
                                                <input type="hidden" name="id" value="{{ network.id }}">
                                                <button type="submit" class="btn btn-warning btn-xs">Disable</button>
                                            </form>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <form action="{{ url('wireless_networks_remove') }}" method="post">
                                            <input type="hidden" name="id" value="{{ network.id }}">
                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i> Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="alert alert-danger">No saved networks found.</p>
            {% endif %}
        </div>
    </section>

    <section>
        <div class="section-inner">
            <h2>Connect to a network</h2>

            {% if networks %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Channel</th>
                                <th>Signal Level</th>
                                <th></th>
                            </tr>
                            {% for network in networks %}
                                <tr>
                                    <td class="text-center"><i class="fa {{ network.security == 'Open' ? 'fa-unlock' : 'fa-lock' }}" aria-hidden="true"></i></td>
                                    <td>{{ network.ssid }}</td>
                                    <td>{{ network.channel }}</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="{{ network.signal_level }}" aria-valuemin="0" aria-valuemax="100" style="width:{{ network.signal_level }}%">
                                                {{ network.signal_level }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center"><button type="button" class="btn btn-primary connect-button" data-ssid="{{ network.ssid }}" data-bssid="{{ network.bssid }}" data-security="{{ network.security }}" data-key-management="{{ network.key_management }}" data-toggle="modal" data-target="#connect-modal">Connect</button></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="alert alert-danger">No wireless networks found.</p>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block modal %}
    <!-- Modal -->
    <div id="connect-modal" class="modal fade" role="dialog" aria-labelledby="connect-modal-title">
        <div class="modal-dialog" role="document">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="connect-modal-title" class="modal-title">Connect to network</h4>
                </div>
                <form action="{{ url('wireless_networks_add') }}" method="POST" id="connect-modal-form" class="form-horizontal">
                    <div class="modal-body">
                        <input type="hidden" id="ssid" name="ssid">
                        <input type="hidden" id="bssid" name="bssid">
                        <input type="hidden" id="security" name="security">
                        <input type="hidden" id="key-management" name="key_management">

                        <div id="connect-modal-form-password" class="form-group">
                            <label for="password" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="password" name="password" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="enable_preferred_bssid"> Prefer the selected access point
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Connect</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
