{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <section>
        <div class="section-inner">
            <h2>Internet configuration</h2>

            <div class="row">
                <div class="col-md-6">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>Interface status</td>
                                    <td><span class="label label-{{ interface.operation_state ? interface.operation_state.0 : 'default' }}">{{ interface.operation_state ? interface.operation_state.0 : 'Unknown' }}</span></td>
                                </tr>
                                <tr>
                                    <td>Connection type</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>IP address</td>
                                    <td>{{ interface.ip ? interface.ip : 'Unknown' }}</td>
                                </tr>
                                <tr>
                                    <td>MAC address</td>
                                    <td>{{ interface.mac_address ? interface.mac_address : 'Unknown' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>Default gateway</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>Subnet Mask</td>
                                    <td>{{ interface.netmask ? interface.netmask : 'Unknown' }}</td>
                                </tr>
                                <tr>
                                    <td>Primary DNS server</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>Secondary DNS server</td>
                                    <td>-</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
